@model IEnumerable<BloodDonationInformation.Models.DonationDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Donor
        </th>
        <th>
            Blood Bank
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount) (in Pints)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Donor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodBank.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DonationDetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DonationDetailID })
        </td>
    </tr>
}

</table>
